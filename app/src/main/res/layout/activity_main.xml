<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="16"
    >

    <TextView
        android:text="Caculator"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#3366FF"/>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="#DDDDDD"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:text="mời nhập : "
        />


    <LinearLayout

        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <Button
            android:text="2nd"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="π"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="e"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="ce"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="xóa"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <Button
            android:text="X^2"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="1/x"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="|x|"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="exp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="mod"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <Button
            android:text="x^3"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="("
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text=")"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="n!"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="/"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <Button
            android:text="x^y"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="7"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="8"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="9"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="*"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <Button
            android:text="10^x"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="4"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="5"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="6"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="-"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
    </LinearLayout>
    <LinearLayout

        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <Button
            android:text="log"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="3"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="+"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />

    </LinearLayout>
    <LinearLayout

        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        <Button
            android:text="LN"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="+/-"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="0"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:layout_weight="1"
            android:text="."
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
        <Button
            android:background="#FF0000"
            android:layout_weight="1"
            android:text="="
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            />
    </LinearLayout>






</LinearLayout>